@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task ClosePopupAfterDelay()
    {
        await Task.Delay(1800); 
        await ClosePopup();
    }

    private async Task ClosePopup()
    {
        if (OnClose.HasDelegate)
        {
            await OnClose.InvokeAsync();
        }
    }

    protected override void OnParametersSet()
    {
        if (IsVisible)
        {
            _ = ClosePopupAfterDelay();
        }
    }
}

@if (IsVisible)
{
    <div class="success-popup-overlay" @onclick="ClosePopup">
        <div class="success-popup-content" @onclick:stopPropagation>
            <video autoplay loop muted class="success-popup-video">
                <source src="Images/true.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
            <h2 class="success-popup-title">Success!</h2>
        </div>
    </div>
}

<style>
    .success-popup-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 1000;
    }

    .success-popup-content {
        position: relative;
        width: 50%; /* Reduced width for a smaller popup */
        max-width: 300px; /* Smaller maximum width */
        padding: 10px; /* Reduced padding */
        background: white;
        border-radius: 8px;
        text-align: center;
        animation: popupFadeIn 0.5s ease;
    }

    .success-popup-video {
        width: 100%;
        max-height: 200px;
        border-radius: 8px;
    }

    .success-popup-title {
        margin-top: 5px;
        font-size: 16px;
        color: #28a745;
    }
</style>
